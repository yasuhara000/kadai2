<main>
  <h1>Editing Book</h1>

  <%= form_for(@book, url:"/todolists/#{@book.id}") do |f| %>

    <h4 class="title2">Title</h4>
    <%= f.text_field :title %>

    <h4 class="title2">Body</h4>
    <%= f.text_area :body %>
    <p class="update"><%= f.submit 'updatebook' %></p>

  <% end %>
  <%=link_to "show",edit_todolist_path %>
  <span class="dec">|</span>
  <%=link_to "back",index_path%>

  <% @book.errors.full_messages.each  do |message| %>
      <div class="form-error">
            <%= message %>
      </div>
  <%end%>

</main>
